<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <!--Page centre -->

    <android.support.constraint.ConstraintLayout
        android:id="@+id/map_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintHorizontal_bias="0.151"
            map:layout_constraintStart_toEndOf="@+id/iv_left"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.0"
            tools:context="fr.wildcodeschool.ecowild.MapsActivity"
            />

        <TextView
            android:id="@+id/test_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />


        <Button
            android:id="@+id/button_test"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:alpha="0.7"
            android:background="@drawable/personne_poubelle"
            android:visibility="gone"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            android:alpha="1"
            android:background="@drawable/icon_avatar"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />


        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/magic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:layout_marginStart="19dp"
            app:button_icon="@drawable/jeter"
            app:button_icon_height="43dp"
            app:button_icon_width="40dp"
            app:expandable_area_color="@color/colorEcoWild2"
            app:hide_text="@string/je_viens_de_recycler"
            app:hide_text_color="@color/colorBlack"
            app:hide_text_size="8sp"
            app:icon_button_color="@color/colorEcoWild"
            app:magic_button_size="60dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/popup"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="@+id/map" />

        <ToggleButton
            android:id="@+id/go_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="49dp"
            android:background="@drawable/go_list_button"
            android:gravity="center_horizontal"
            android:textOff=""
            android:textOn=""
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.398"
            map:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <!--Volet Gauche -->

    <android.support.constraint.ConstraintLayout

        android:id="@+id/relative_layout_left"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_background"
            android:layout_width="270dp"
            android:layout_height="140dp"
            android:background="@color/colorEcoWild"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            map:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:id="@+id/tv_pseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="17dp"
            android:shadowColor="@color/colorBlack"
            android:shadowRadius="20"
            android:text="@string/pseudo"
            android:textColor="#f8dc81"
            android:textSize="26sp"
            android:textStyle="bold"
            android:visibility="gone"
            map:layout_constraintStart_toEndOf="@+id/img_profil"
            map:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_profil"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/icon_avatar"
            map:layout_constraintStart_toStartOf="@+id/tv_background"
            map:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_rang"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/icon_avatar"
            map:layout_constraintStart_toStartOf="@+id/tv_background"
            map:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:shadowColor="@color/colorBlack"
            android:shadowRadius="20"
            android:textColor="#f8dc81"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            map:layout_constraintStart_toEndOf="@+id/img_profil"
            map:layout_constraintTop_toBottomOf="@+id/tv_pseudo" />

        <TextView
            android:id="@+id/tv_parameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="41dp"
            android:text="@string/param_tres"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/iv_information"
            map:layout_constraintStart_toEndOf="@+id/imageButton" />

        <TextView
            android:id="@+id/tv_move"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="@string/unlock_button"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.011"
            app:layout_constraintTop_toBottomOf="@+id/iv_jeu"
            map:layout_constraintStart_toEndOf="@+id/iv_move" />

        <TextView
            android:id="@+id/tv_useful_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            android:text="@string/informations_utiles"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            map:layout_constraintStart_toEndOf="@+id/iv_information"
            map:layout_constraintTop_toBottomOf="@+id/tv_background" />

        <ImageButton
            android:id="@+id/iv_information"
            style="@android:style/Widget.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="58dp"
            android:background="?android:attr/actionModeFindDrawable"
            android:backgroundTint="@android:color/black"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/tv_background" />

        <Button
            android:id="@+id/button_create_account"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="19.8dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button"
            android:text="@string/connexion"
            android:textSize="12sp"
            android:visibility="visible"
            map:layout_constraintBottom_toBottomOf="@+id/tv_background"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/parametres"
            app:layout_constraintTop_toBottomOf="@+id/iv_information"
            app:srcCompat="@drawable/parametres"
            map:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/pb_xp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="85dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:max="10"
            android:progressDrawable="@drawable/progressbar"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.0"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/img_profil" />

        <TextView
            android:id="@+id/tv_xp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="48.8dp"
            android:textColor="#f8dc81"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pb_xp" />

        <com.ebanx.swipebtn.SwipeButton
            android:id="@+id/swipe_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="44dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="8dp"
            map:button_background="@drawable/deconnectionbutton"
            map:button_bottom_padding="20dp"
            map:button_image_disabled="@drawable/ic_lock_open_black_24dp"
            map:button_image_enabled="@drawable/ic_lock_outline_black_24dp"
            map:button_left_padding="20dp"
            map:button_right_padding="20dp"
            map:button_top_padding="20dp"
            map:inner_text="@string/déconnexion"
            map:inner_text_background="@drawable/button"
            map:inner_text_bottom_padding="18dp"
            map:inner_text_color="@color/colorBlack"
            map:inner_text_size="18sp"
            map:inner_text_top_padding="18dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/imageButton"
            map:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/iv_move"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/move"
            app:layout_constraintTop_toBottomOf="@+id/iv_jeu"
            app:srcCompat="@drawable/move"
            map:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:textColor="#f8dc81"
            android:shadowColor="@color/colorBlack"
            android:shadowRadius="20"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/img_profil"
            app:layout_constraintTop_toBottomOf="@+id/tv_rank" />

        <ImageView
            android:id="@+id/iv_jeu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/ic_videogame_asset_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton" />

        <TextView
            android:id="@+id/tv_jeu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="42dp"
            android:text="@string/ecogame"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_jeu"
            app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.DrawerLayout>