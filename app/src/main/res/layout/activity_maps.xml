<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true">



    <!--Page centre -->

        <android.support.constraint.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toStartOf="@+id/buttonright"
                map:layout_constraintHorizontal_bias="0.151"
                map:layout_constraintStart_toEndOf="@+id/button_left"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.0"
                tools:context="fr.wildcodeschool.ecowild.MapsActivity" />

            <Switch
                android:id="@+id/go_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/test_position"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


            <Button
                android:id="@+id/button_right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:alpha="0.7"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/button_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintStart_toStartOf="parent"
                android:alpha="0.7"/>

            <ImageView
                android:id="@+id/iv_profil"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/profil"
                map:layout_constraintBottom_toBottomOf="@+id/button_left"
                map:layout_constraintEnd_toEndOf="@+id/button_left"
                map:layout_constraintStart_toStartOf="@+id/button_left"
                map:layout_constraintTop_toTopOf="@+id/button_left" />

        </android.support.constraint.ConstraintLayout>

    <!--Volet Gauche -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#FFFFFFFF"
        android:id="@+id/relativeLayoutLeft"
        >
        <!--  -->


        <TextView
            android:id="@+id/tv_background"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:background="#439dbb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            map:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:id="@+id/tv_pseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="Pseudo"
            android:textColor="#f8dc81"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone"
            map:layout_constraintStart_toEndOf="@+id/img_profil"
            map:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_profil"
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/anonyme"
            map:layout_constraintStart_toStartOf="@+id/tv_background"
            map:layout_constraintTop_toTopOf="parent"
            map:srcCompat="@drawable/anonyme" />

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Rang et Level"
            android:textColor="#f8dc81"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone"
            map:layout_constraintStart_toEndOf="@+id/img_profil"
            map:layout_constraintTop_toBottomOf="@+id/tv_pseudo" />

        <TextView
            android:id="@+id/tv_parameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="60dp"
            android:text="Parametres"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            map:layout_constraintStart_toEndOf="@+id/iv_parameter"
            map:layout_constraintTop_toBottomOf="@+id/tv_favorite" />

        <TextView
            android:id="@+id/tv_useful_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:text="Infos utiles"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            map:layout_constraintStart_toEndOf="@+id/iv_information"
            map:layout_constraintTop_toBottomOf="@+id/tv_background" />

        <TextView
            android:id="@+id/tv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="55dp"
            android:text="Favoris"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            map:layout_constraintStart_toEndOf="@+id/iv_favorite"
            map:layout_constraintTop_toBottomOf="@+id/tv_useful_information" />

        <ImageButton
            android:id="@+id/iv_favorite"
            style="@android:style/Widget.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@android:drawable/btn_star_big_on"
            app:srcCompat="@android:drawable/btn_star_big_on"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/iv_information" />

        <ImageButton
            android:id="@+id/iv_parameter"
            style="@android:style/Widget.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@android:drawable/ic_menu_preferences"
            app:srcCompat="@android:drawable/ic_menu_preferences"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/iv_favorite" />

        <ImageButton
            android:id="@+id/iv_information"
            style="@android:style/Widget.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="?android:attr/actionModeFindDrawable"
            app:srcCompat="?android:attr/actionModeFindDrawable"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/tv_background" />

        <ImageButton
            android:id="@+id/iv_disconnect"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="32dp"
            android:background="@android:drawable/ic_lock_power_off"
            android:src="@android:drawable/ic_lock_power_off"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="8dp"
            android:text="Deconnexion"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintStart_toEndOf="@+id/iv_disconnect" />

        <Button
            android:id="@+id/button_create_account"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text=" Creer un compte"
            android:textSize="12sp"
            map:layout_constraintStart_toEndOf="@+id/iv_create_account"
            map:layout_constraintTop_toBottomOf="@+id/button_connection" />

        <ImageView
            android:id="@+id/iv_to_log_in"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/connexionok"
            app:srcCompat="@drawable/connexionok"
            map:layout_constraintStart_toEndOf="@+id/img_profil"
            map:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_connection"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:text="Se connecter"
            android:textSize="12sp"
            map:layout_constraintStart_toEndOf="@+id/iv_to_log_in"
            map:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_create_account"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/ajoutcompte"
            app:srcCompat="@drawable/ajoutcompte"
            map:layout_constraintStart_toEndOf="@+id/img_profil"
            map:layout_constraintTop_toBottomOf="@+id/iv_to_log_in" />

    </android.support.constraint.ConstraintLayout>

    <!--Volet Droite -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="#FFFFFFFF"
        android:id="@+id/relativeLayoutRight">
        <!---->

        <TextView
            android:id="@+id/tv_filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="Parametres Carte"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_kilometer"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:text="Kilometres"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            map:layout_constraintStart_toEndOf="@+id/sb_kilometer"
            map:layout_constraintTop_toBottomOf="@+id/tv_filter_title" />

        <TextView
            android:id="@+id/tv_plastic_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:text="Filtres Plastique"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            map:layout_constraintStart_toEndOf="@+id/iv_plastic_filter"
            map:layout_constraintTop_toBottomOf="@+id/tv_glass_filter" />

        <TextView
            android:id="@+id/tv_glass_filter"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:text="Filtres verre"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            map:layout_constraintStart_toEndOf="@+id/iv_plastic_filter"
            map:layout_constraintTop_toBottomOf="@+id/tv_kilometer" />

        <SeekBar
            android:id="@+id/sb_kilometer"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:max="10"
            android:progress="3"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/tv_filter_title" />

        <ImageView

            android:id="@+id/iv_plastic_filter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@color/colorEcoWild"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/iv_glass_filter"
            map:srcCompat="@android:color/holo_blue_dark" />

        <ImageView
            android:id="@+id/iv_glass_filter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="32dp"
            android:background="@android:color/holo_green_dark"
            app:srcCompat="@android:color/holo_green_dark"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/sb_kilometer" />


    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.DrawerLayout>